<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LayoutTheme">
        <item name="android:padding">10dp</item>
    </style>

    <!-- Fields -->
    <style name="CustomLabel">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="CustomValue">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>
    <!-- Fields -->

    <!-- Button -->
    <style name="CustomButton">
        <item name="android:layout_marginTop">210dp</item>
    </style>
    <!-- Button -->

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_2color</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/title_color</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="Full_Screen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>



    </style>


</resources>
